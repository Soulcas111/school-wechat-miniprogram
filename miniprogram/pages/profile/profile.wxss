/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: #f6f6f6;
  padding-bottom: 40rpx;
}

/* 用户卡片 */
.user-card {
  background: #3A7CA5; /* 主题蓝 */
  padding: 60rpx 40rpx 100rpx; /* 底部留白给下层 */
  display: flex;
  align-items: center;
  color: #fff;
}

.avatar-box {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
  border: 4rpx solid rgba(255,255,255,0.3);
  overflow: hidden;
  margin-right: 30rpx;
}

.avatar {
  width: 100%;
  height: 100%;
}

.info-box {
  display: flex;
  flex-direction: column;
}

.name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.role-tag {
  font-size: 22rpx;
  background: rgba(255,255,255,0.2);
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  align-self: flex-start;
}

/* 列表通用样式 */
.section-list, .action-group {
  background: #fff;
  width: 690rpx;
  margin: 0 auto;
  border-radius: 20rpx;
  padding: 0 20rpx;
  margin-top: -60rpx; /* 上移覆盖Banner */
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.05);
  margin-bottom: 30rpx;
}

.action-group {
  margin-top: 0;
}

.list-item, .btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #f5f5f5;
  font-size: 28rpx;
  color: #333;
}

.list-item:last-child, .btn:last-child {
  border-bottom: none;
}

.item-left { display: flex; align-items: center; }
.item-icon { margin-right: 20rpx; font-size: 32rpx; }
.item-desc { color: #999; font-size: 26rpx; }

/* 按钮特殊样式 */
.btn {
  width: 100% !important; /* 覆盖微信默认button样式 */
  background: transparent;
  padding: 0;
  font-weight: normal;
}
.arrow { color: #ccc; }

/* 退出登录 */
.logout-area {
  margin-top: 60rpx;
  padding: 0 40rpx;
}

.btn-logout {
  background: #fff;
  color: #F5222D;
  border-radius: 50rpx;
  font-size: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.05);
}