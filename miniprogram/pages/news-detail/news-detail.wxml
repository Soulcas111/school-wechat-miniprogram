<view class="container">
  
  <view wx:if="{{loading}}" style="padding: 50rpx; text-align: center;">
    <text>正在加载内容...</text>
  </view>

  <view wx:elif="{{news}}" class="content-wrapper">
    <view class="header">
      <view class="title">{{news.title}}</view>
      <view class="meta">
        <text class="author">{{news.type == 'news' ? '教务处' : '校园通知'}}</text>
        <text class="time">{{news.dateStr}}</text>
        <text class="read">阅读 1024+</text>
      </view>
    </view>

    <view class="divider"></view>

    <view class="content">
      <text class="text-body" user-select>{{news.content}}</text>
    </view>
  </view>

  <view wx:else style="padding: 50rpx; text-align: center; color: #999;">
    <text>暂无相关内容</text>
  </view>
  
</view>