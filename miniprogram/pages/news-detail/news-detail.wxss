/* pages/news-detail/news-detail.wxss */
.container {
  background-color: #fff;
  min-height: 100vh;
  padding: 40rpx;
}

/* 标题 */
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

.meta {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.author {
  color: var(--primary-color);
  background: rgba(58, 124, 165, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.time {
  margin-right: 20rpx;
}

/* 分割线 */
.divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 30rpx 0;
}

/* 正文 */
.content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
  text-align: justify;
}

.text-body {
  width: 100%;
  display: block;
}

/* 视频模拟 */
.video-box {
  width: 100%;
  height: 400rpx;
  background: #000;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.video-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #fff;
  opacity: 0.7;
}

.video-placeholder .sub-text {
  font-size: 24rpx;
  margin-top: 10rpx;
}

/* 底部 */
.footer {
  margin-top: 80rpx;
  text-align: center;
  font-size: 22rpx;
  color: #ccc;
  padding-bottom: 40rpx;
}