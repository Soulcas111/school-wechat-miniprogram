/* pages/news-detail/news-detail.wxss */
.container {
  background-color: #fff;
  min-height: 100vh;
  padding: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.meta {
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}

.author {
  color: #3A7CA5;
  background: rgba(58, 124, 165, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 20rpx;
}

.divider {
  height: 1rpx;
  background: #f0f0f0;
  margin: 30rpx 0;
}

.content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.8;
}

.text-body {
  width: 100%;
  display: block; /* 确保文字独占一行 */
}