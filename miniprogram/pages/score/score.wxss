/* pages/score/score.wxss */
.container { padding-bottom: 40rpx; }

/* 顶部筛选 */
.filter-bar {
  background: #fff; padding: 30rpx;
  display: flex; justify-content: space-between; align-items: center;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}
.student-switch .label { color: #666; font-size: 26rpx; }
.student-switch .value { font-weight: bold; font-size: 30rpx; color: #333; }
.exam-picker {
  background: #f0f7ff; color: #3A7CA5;
  padding: 10rpx 24rpx; border-radius: 30rpx;
  font-size: 26rpx; display: flex; align-items: center;
}
.arrow { margin-left: 8rpx; font-size: 20rpx; }

/* 成绩总卡片 (新版) */
.score-card {
  background: linear-gradient(135deg, #3A7CA5 0%, #68A5CE 100%);
  margin: 30rpx; padding: 40rpx; border-radius: 20rpx;
  color: #fff; box-shadow: 0 8rpx 20rpx rgba(58, 124, 165, 0.4);
}

.card-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 左侧总分 */
.total-section {
  text-align: center;
  flex: 1;
}
.total-label { font-size: 24rpx; opacity: 0.8; margin-bottom: 4rpx; }
.total-num { font-size: 80rpx; font-weight: bold; line-height: 1; }
.total-num .unit { font-size: 28rpx; margin-left: 6rpx; font-weight: normal; }

/* 分割线 */
.v-line {
  width: 2rpx; height: 80rpx;
  background: rgba(255,255,255,0.3);
  margin: 0 40rpx;
}

/* 右侧排名 */
.rank-section {
  flex: 1.2;
  display: flex;
  flex-direction: column;
}
.rank-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255,255,255,0.15);
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}
.mt-10 { margin-top: 16rpx; }

.rank-label { font-size: 24rpx; opacity: 0.9; }
.rank-val { font-size: 32rpx; font-weight: bold; }

/* 科目列表 */
.subject-list {
  background: #fff; margin: 0 30rpx;
  border-radius: 20rpx; padding: 10rpx 30rpx;
}
.subject-item {
  display: flex; align-items: center;
  padding: 30rpx 0; border-bottom: 1rpx solid #f0f0f0;
}
.subject-item:last-child { border-bottom: none; }
.sub-name { width: 80rpx; font-weight: bold; color: #333; font-size: 28rpx; }
.sub-score { width: 60rpx; text-align: right; font-weight: bold; font-size: 30rpx; color: #333; }
.empty-box { padding: 100rpx 0; text-align: center; color: #999; }

.progress-box {
  flex: 1; height: 16rpx; background: #f5f5f5;
  border-radius: 8rpx; margin: 0 20rpx; overflow: hidden;
}
.progress-bar { height: 100%; border-radius: 8rpx; transition: width 1s ease; }

.score-high { background-color: #52C41A; }
.score-mid  { background-color: #3A7CA5; }
.score-low  { background-color: #F5222D; }