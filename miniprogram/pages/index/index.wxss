/* pages/index/index.wxss */
.header {
  background-color: var(--primary-color);
  padding: 30rpx 40rpx 120rpx; /* 底部留白给Banner */
  color: #fff;
}
.greeting { font-size: 36rpx; font-weight: bold; margin-bottom: 10rpx; }
.role-badge { 
  display: inline-block; font-size: 22rpx; 
  background: rgba(255,255,255,0.2); padding: 4rpx 12rpx; border-radius: 8rpx; 
}

.banner-area { margin-top: -80rpx; padding: 0 30rpx; }
.swiper { height: 260rpx; border-radius: 20rpx; overflow: hidden; box-shadow: 0 8rpx 20rpx rgba(58,124,165,0.2); }
.slide-item { width: 100%; height: 100%; display: flex; align-items: center; justify-content: center; }
.slide-text { color: #fff; font-size: 32rpx; font-weight: bold; letter-spacing: 2rpx; opacity: 0.9; }

.menu-grid { display: flex; justify-content: space-between; padding: 50rpx 30rpx; }
.menu-item { display: flex; flex-direction: column; align-items: center; width: 25%; }
.icon-circle { 
  width: 100rpx; height: 100rpx; border-radius: 35rpx; 
  display: flex; align-items: center; justify-content: center; margin-bottom: 16rpx; 
}
.emoji { font-size: 44rpx; }
.menu-label { font-size: 26rpx; color: #333; }

.section { padding: 0 30rpx; }
.section-head { display: flex; align-items: center; margin-bottom: 20rpx; }
.title-line { width: 8rpx; height: 32rpx; background: var(--primary-color); border-radius: 4rpx; margin-right: 16rpx; }
.section-title { font-size: 32rpx; font-weight: bold; }

.news-card { 
  background: #fff; padding: 24rpx; border-radius: 16rpx; margin-bottom: 20rpx; 
  display: flex; align-items: flex-start; box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.03); 
}
.news-type { 
  font-size: 20rpx; color: #fff; padding: 4rpx 10rpx; border-radius: 6rpx; margin-right: 20rpx; margin-top: 4rpx;
}
.news-type.news { background: var(--primary-color); }
.news-type.course { background: var(--warning-color); }

.news-content { flex: 1; }
.news-title { font-size: 28rpx; font-weight: 500; color: #333; margin-bottom: 12rpx; }
.news-meta { font-size: 22rpx; color: #999; display: flex; justify-content: space-between; }